<!-- 参考サイト -->
<% content_for :title do %>
  ログイン
<% end %>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-md-8 col-md-offset-2 col-sm-9 col-sm-offset-1 center">
      <h1 class="my-5">@@@にログイン</h1>
      <hr>
    </div>

    <div class="col-md-4 col-md-offset-2 col-sm-5 col-sm-offset-1">

      <%- if devise_mapping.omniauthable? %>

          <div class="mb-1">
            <%= link_to user_twitter_omniauth_authorize_path do %>
              <button class="btn btn-twitter width-100">
                <i class="fa fa-fw fa-twitter"></i>&nbsp;Twitterアカウントでログイン
              </button>
            <% end %>
          </div>

          <div class="mb-1">
            <%= link_to user_twitter_omniauth_authorize_path do %>
              <button class="btn btn-facebook width-100">
                <i class="fa fa-fw fa-facebook"></i>&nbsp;Facebookアカウントでログイン
              </button>
            <% end %>
          </div>

          <div class="mb-1">
            <%= link_to user_twitter_omniauth_authorize_path do %>
              <button class="btn btn-line width-100">
                <i class="fa fa-fw fa-mobile"></i>&nbsp;LINEアカウントでログイン</button>
            <% end %>
          </div>

          <div class="mb-1">
            <%= link_to user_twitter_omniauth_authorize_path do %>
              <button class="btn btn-instagram width-100">
                <i class="fa fa-fw fa-instagram"></i>&nbsp;Instagramアカウントでログイン</button>
            <% end %>
          </div>

          <div class="mb-1">
            <%= link_to user_twitter_omniauth_authorize_path do %>
              <button class="btn btn-google width-100">
                <i class="fa fa-fw fa-google"></i>&nbsp;Googleアカウントでログイン</button>
            <% end %>
          </div>

      <% end -%>

    </div>
    <div class="col-md-4 col-sm-5 border-l">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: 'email' } %>
          <%= f.input :password, required: false, input_html: { autocomplete: 'current-password' } %>
          <%= f.input :remember_me, as: :boolean, input_html: { checked: true } if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, '@@@にログイン', class: 'btn btn-success width-100' %>
        </div>
      <% end %>

      <hr>

      <%= link_to "新規登録（無料）", new_registration_path(resource_name) %><br />
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %><br />


    </div>

  </div><!-- end of .row -->
</div><!-- end of .container -->
